#!/usr/bin/env bash
export SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"


#down the last running theme
if [ -f "/tmp/leftwm-theme-down" ]; then
    /tmp/leftwm-theme-down
    rm /tmp/leftwm-theme-down
fi
ln -s $SCRIPTPATH/down /tmp/leftwm-theme-down


#boot picom or compton if it exists
if [ -x "$(command -v picom)" ]; then
  picom --config $SCRIPTPATH/picom.conf &> /dev/null &
elif [ -x "$(command -v compton)" ]; then
  compton &> /dev/null &
fi

#set the theme.ron config
leftwm-command "LoadTheme $SCRIPTPATH/theme.ron"

#set background to a random one
#WARNING! Images MUST Have 8-bit colors otherwise wal will all be f*cked up!
if [ ! f $SCRIPTPATH/last_bg.txt ]
then
  RFILE=$(ls $SCRIPTPATH/backgrounds/* | shuf -n 1)
else
  ALR=$(cat $SCRIPTPATH/last_bg.txt)
  RFILE=$(ls $SCRIPTPATH/backgrounds/* | shuf -n 1)
  while [[ $RFILE == $ALR ]]; do
    RFILE=$(ls $SCRIPTPATH/backgrounds/* | shuf -n 1)
  done
fi
echo $RFILE > $SCRIPTPATH/last_bg.txt
if [ -x "$(command -v wal)" ]; then
  wal -i $RFILE
elif [ -x "$(command -v feh)" ]; then
  feh --bg-scale $RFILE
fi



index=0
monitors="$(polybar -m | sed s/:.*//)"
leftwm-state -q -n -t $SCRIPTPATH/sizes.liquid | sed -r '/^\s*$/d' | while read -r width x y
do
  let indextemp=index+1
  monitor=$(sed "$indextemp!d" <<<"$monitors")
  barname="mainbar$index"
  monitor=$monitor offset=$x width=$width polybar -c $SCRIPTPATH/polybar.config $barname &> /dev/null &
  let index=indextemp
done

